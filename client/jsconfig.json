// this is so that I don't have to write too long file paths
{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@components/*" : ["components/*"],
            "@pages/*" : ["pages/*"],
            "@courses/*" : ["pages/courses/*"],
            "@styles/*" : ["styles/*"],
            "@public/*" : ["public/*"],
            "@server/*" : ["../server/*"],
        }
    }
}